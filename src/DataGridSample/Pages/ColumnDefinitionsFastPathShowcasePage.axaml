<UserControl
    x:Class="DataGridSample.Pages.ColumnDefinitionsFastPathShowcasePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:DataGridSample.Models"
    xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
    x:DataType="viewModels:ColumnDefinitionsFastPathShowcaseViewModel"
    d:DesignHeight="720"
    d:DesignWidth="1100"
    mc:Ignorable="d">

  <UserControl.DataContext>
    <viewModels:ColumnDefinitionsFastPathShowcaseViewModel />
  </UserControl.DataContext>

  <UserControl.Resources>
    <DataTemplate x:Key="FullNameTemplate"
                  x:DataType="models:Person">
      <TextBlock>
        <Run Text="{Binding FirstName}" />
        <Run Text=" " />
        <Run Text="{Binding LastName}" />
      </TextBlock>
    </DataTemplate>

    <DataTemplate x:Key="StatusBadgeTemplate"
                  x:DataType="models:Person">
      <Border Padding="6,2"
              Margin="4,2"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              CornerRadius="8"
              Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
              BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
              BorderThickness="1">
        <TextBlock Text="{Binding Status}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center" />
      </Border>
    </DataTemplate>
  </UserControl.Resources>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,*"
        ColumnDefinitions="3*,2*"
        ColumnSpacing="12"
        RowSpacing="8">
    <StackPanel Grid.ColumnSpan="2" Spacing="4">
      <TextBlock Classes="h2">Fast Path Showcase</TextBlock>
      <TextBlock TextWrapping="Wrap"
                 Text="Fully typed column definitions wired to filtering, sorting, and search models with strict fast-path options enabled." />
    </StackPanel>

    <WrapPanel Grid.Row="1"
               Grid.ColumnSpan="2"
               VerticalAlignment="Center">
      <TextBlock VerticalAlignment="Center" Text="Search" />
      <TextBox Width="240"
               Margin="6 0"
               Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
      <Button Content="Clear" Command="{Binding ClearSearchCommand}" />
      <Button Content="Previous" Command="{Binding PreviousCommand}" />
      <Button Content="Next" Command="{Binding NextCommand}" />
      <TextBlock VerticalAlignment="Center" Text="{Binding ResultSummary}" />
    </WrapPanel>

    <DataGrid x:Name="FastPathGrid"
              Grid.Row="2"
              Grid.Column="0"
              ItemsSource="{Binding View}"
              FilteringModel="{Binding FilteringModel}"
              SearchModel="{Binding SearchModel}"
              SortingModel="{Binding SortingModel}"
              ColumnDefinitionsSource="{Binding ColumnDefinitions}"
              AutoGenerateColumns="False"
              CanUserSortColumns="True"
              GridLinesVisibility="Horizontal"
              SelectionMode="Extended" />

    <Border Grid.Row="2"
            Grid.Column="1"
            Padding="10"
            Background="#08000000"
            CornerRadius="6">
      <StackPanel Spacing="12">
        <StackPanel Spacing="6">
          <TextBlock Text="Fast path" FontWeight="SemiBold" />
          <CheckBox Content="Use accessors only"
                    IsChecked="{Binding FastPathOptions.UseAccessorsOnly, Mode=TwoWay}" />
          <CheckBox Content="Throw on missing accessor"
                    IsChecked="{Binding FastPathOptions.ThrowOnMissingAccessor, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Spacing="6">
          <TextBlock Text="Filters" FontWeight="SemiBold" />
          <ContentControl Content="{Binding NameFilter}"
                          ContentTemplate="{StaticResource DataGridFilterTextEditorTemplate}" />
          <ContentControl Content="{Binding AgeFilter}"
                          ContentTemplate="{StaticResource DataGridFilterNumberEditorTemplate}" />
          <ContentControl Content="{Binding StatusFilter}"
                          ContentTemplate="{StaticResource DataGridFilterEnumEditorTemplate}" />
          <Button Content="Clear filters" Command="{Binding ClearFiltersCommand}" />
        </StackPanel>

        <StackPanel Spacing="6">
          <TextBlock Text="Sorting" FontWeight="SemiBold" />
          <Button Content="Sort age desc" Command="{Binding SortByAgeDescendingCommand}" />
          <Button Content="Sort full name" Command="{Binding SortByNameCommand}" />
          <Button Content="Clear sorts" Command="{Binding ClearSortsCommand}" />
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.Pages.DetachWhileEditingPage"
             x:DataType="viewModels:DetachWhileEditingViewModel">
  <UserControl.DataContext>
    <viewModels:DetachWhileEditingViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Grid.Row="0" Spacing="4">
      <TextBlock Classes="h2" Text="Detach while editing" />
      <TextBlock Text="Begin editing a cell, then toggle the DataGrid off to remove it from the visual tree. Editing should end without exceptions."
                 TextWrapping="Wrap" />
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
      <CheckBox Content="Show DataGrid" IsChecked="{Binding ShowGrid, Mode=TwoWay}" />
      <TextBlock VerticalAlignment="Center"
                 Text="Tip: start editing a cell, then uncheck to detach." />
    </StackPanel>

    <ContentControl Grid.Row="2" Content="{Binding GridHost}">
      <ContentControl.ContentTemplate>
        <DataTemplate x:DataType="viewModels:DetachWhileEditingViewModel">
          <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                  BorderThickness="1"
                  CornerRadius="4"
                  Padding="8">
            <DataGrid ItemsSource="{Binding Items}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="All"
                      GridLinesVisibility="All"
                      Height="360">
              <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="2*"
                                    x:DataType="viewModels:DetachWhileEditingItem" />
                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity}"
                                    Width="*"
                                    x:DataType="viewModels:DetachWhileEditingItem" />
                <DataGridTextColumn Header="Note"
                                    Binding="{Binding Note}"
                                    Width="3*"
                                    x:DataType="viewModels:DetachWhileEditingItem" />
              </DataGrid.Columns>
            </DataGrid>
          </Border>
        </DataTemplate>
      </ContentControl.ContentTemplate>
    </ContentControl>
  </Grid>
</UserControl>
